<div class="container mt-3">
  <div class="card border-0 bg-body-tertiary shadow-sm">
    <h4 class="fs-6 mt-4 mx-3 fw-bold"><%= formData.formTitle %></h4>
    <div class="card-body">
      <form action="<%= formData.formAction %>" method="post" class="row g-3">
        <!-- Title & Genre -->
        <div class="col-md-6">
          <div class="form-floating">
            <input type="text" class="form-control border-0" id="title" placeholder="Title" value="<%= formData.title || '' %>" name="title" required>
            <label for="title">Title</label>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-floating">
            <input type="text" class="form-control border-0" id="genre" placeholder="Genre" value="<%= formData.genre || '' %>" name="genre" required>
            <label for="genre">Genre</label>
          </div>
        </div>

        <!-- Director & Year Released -->
        <div class="col-lg-6">
          <div class="form-floating">
            <input type="text" class="form-control border-0" id="director" placeholder="Director" value="<%= formData.director || '' %>" name="director" required>
            <label for="director">Director</label>
          </div>
        </div>
        <div class="col-lg-3">
          <div class="form-floating">
            <input type="number" class="form-control border-0" id="year" placeholder="Year Released" min="1888" max="2025" value="<%= formData.releaseYear || '' %>" name="releaseYear" required>
            <label for="year">Year Released</label>
          </div>
        </div>

        <!-- Duration & Rating -->
        <div class="col-lg-3">
          <div class="form-floating">
            <input type="number" class="form-control border-0" id="duration" placeholder="Duration (mins)" min="1" value="<%= formData.duration || '' %>" name="duration" required>
            <label for="duration">Duration (mins)</label>
          </div>
        </div>
        <div class="col-lg-3">
          <div class="form-floating">
            <input type="number" class="form-control border-0" id="rating" placeholder="Rating (0-10)" min="0" max="10" step="0.1" value="<%= formData.rating || '' %>" name="rating" required>
            <label for="rating">Rating (0-10)</label>
          </div>
        </div>

        <!-- Cast -->
        <div class="col-lg-9">
          <div class="form-floating">
            <input type="text" class="form-control border-0" id="cast" placeholder="Cast (comma-separated)" value="<%= formData.cast || '' %>" name="cast" required>
            <label for="cast">Cast (comma-separated)</label>
          </div>
        </div>

        <!-- Language & Country -->
        <div class="col-lg-4">
          <div class="form-floating">
            <input type="text" class="form-control border-0" id="language" placeholder="Language" value="<%= formData.language || '' %>" name="language">
            <label for="language">Language</label>
          </div>
        </div>
        <div class="col-lg-8">
          <div class="form-floating">
            <input type="text" class="form-control border-0" id="country" placeholder="Country" value="<%= formData.country || '' %>" name="country">
            <label for="country">Country</label>
          </div>
        </div>

        <!-- Poster URL -->
        <div class="col-lg-12">
          <div class="form-floating">
            <input type="url" class="form-control border-0" id="poster" placeholder="Poster URL" value="<%= formData.imageUrl || '' %>" name="imageUrl">
            <label for="poster">Poster URL</label>
          </div>
        </div>

        <!-- Description -->
        <div class="col-lg-12">
          <div class="form-floating">
            <textarea class="form-control border-0" id="description" placeholder="Description" style="height: 100px" name="description" required><%= formData.description || '' %></textarea>
            <label for="description">Description</label>
          </div>
        </div>

        <!-- Submit Button -->
        <div class="col-lg-12 text-end">
          <button type="button" class="btn btn-secondary" onclick="window.location = '<%= formData && formData._id ? `/movie/${formData._id}/view` : '/' %>'">Cancel</button>
          <button type="submit" class="btn btn-primary"><%= formData.buttonText || '' %></button>
        </div>
      </form>
    </div>
  </div>
</div>